{
  "manifest_version": 2,

  "name": "Rotten Tomatoes Search",
  "description": "This extension searches rotten tomatoes with highlighted text",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"//,
    //"default_popup": "popup.html"
  },
  "permissions": [
      "activeTab",
      "https://*/*",
      "http://*/*"
  ],
   "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [{
     "js": ["jquery-1.12.3.min.js"],
     "matches": ["<all_urls>"]
   }]
}
